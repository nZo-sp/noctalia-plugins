{
  "id": "news",
  "name": "News Bar",
  "version": "1.2.1",
  "minNoctaliaVersion": "3.6.0",
  "author": "LazarH",
  "license": "MIT",
  "repository": "https://github.com/noctalia-dev/noctalia-plugins",
  "description": "Display scrolling news headlines from various sources using NewsAPI.org",
  "tags": ["Bar", "Panel", "Network", "Fun"],
  "entryPoints": {
    "main": "Main.qml",
    "barWidget": "BarWidget.qml",
    "panel": "Panel.qml",
    "settings": "Settings.qml"
  },
  "dependencies": {
    "plugins": []
  },
  "metadata": {
    "defaultSettings": {
      "apiKey": "YOUR_API_KEY_HERE",
      "country": "us",
      "language": "en",
      "category": "general",
      "refreshInterval": 30,
      "maxHeadlines": 10,
      "rollingSpeed": 50,
      "widgetWidth": 300
    }
  }
}
