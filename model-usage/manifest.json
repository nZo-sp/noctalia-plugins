{
  "id": "model-usage",
  "name": "Model Usage",
  "version": "0.2.0",
  "minNoctaliaVersion": "3.6.0",
  "author": "cmptr",
  "license": "MIT",
  "description": "Shows AI coding assistant usage stats in the bar with detail panel (Claude Code, Codex, OpenRouter, Zen)",
  "repository": "https://github.com/noctalia-dev/noctalia-plugins",
  "tags": ["Bar", "Productivity", "AI"],
  "entryPoints": {
    "main": "Main.qml",
    "barWidget": "BarWidget.qml",
    "panel": "Panel.qml",
    "settings": "Settings.qml"
  },
  "dependencies": {
    "plugins": []
  },
  "metadata": {
    "defaultSettings": {
      "providers": {
        "claude": { "enabled": false, "statsPath": "~/.claude/stats-cache.json", "credentialsPath": "~/.claude/.credentials.json" },
        "codex": { "enabled": false },
        "openrouter": { "enabled": false, "apiKey": "" },
        "zen": { "enabled": false, "apiKey": "" }
      },
      "barDisplayMode": "active",
      "barCycleIntervalSec": 5,
      "barMetric": "prompts",
      "refreshIntervalSec": 30
    }
  }
}
